@using TP_Previo_2.Models;
@model TP_Previo_2.Models.SubmitViewModel
@{
    ViewBag.Title = "Censo";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Guardar", "Home", FormMethod.Post))
{
    <h4>
        @Html.DropDownListFor(model => model.Pais, ViewBag.ListaDePaises, "--select--", new { @class = "form-control" })
    </h4>

    <h4>
        @Html.DropDownListFor(model => model.Estado, ViewBag.ListaDeEstados, "--select--", new { @class = "form-control" })
    </h4>

    <h4>
        <input type="submit" value="Guardar">
    </h4>
}