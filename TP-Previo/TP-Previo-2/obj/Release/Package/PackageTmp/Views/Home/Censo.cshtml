@using TP_Previo_2.Models;
@model TP_Previo_2.Models.SubmitViewModel
@{
    ViewBag.Title = "Censo";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Censo", "Home", FormMethod.Post))
{
    <h4>
        @Html.DropDownList("PaisSeleccionado", (List<SelectListItem>)ViewBag.ListaDePaises)
    </h4>

    <h4>
        <input type="submit" value="Siguiente">
    </h4>
}